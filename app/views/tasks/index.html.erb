<h1> My tasks </h1>

<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li class="m-0 d-flex gap-2">
      <% if task.completed %>
        <i class="fa-regular fa-square-check py-1"></i>
      <%else%>
        <i class="fa-regular fa-square py-1"></i>
      <%end%>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "<i class='fa-solid fa-trash-can'></i>".html_safe,
  task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </li>
  <% end %>
</ul>
<p class="border-top"><%= link_to "<i class='fa-solid fa-plus'></i> Add a new task".html_safe, new_task_path  %></p>

