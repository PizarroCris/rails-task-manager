<h1>Edit Task</h1>

<div class="d-flex flex-column">
  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <%= f.submit %>
  <% end %>


<p class="border-top mt-3 pt-2"><%= link_to "<i class='fa-solid fa-arrow-rotate-left'></i>Back to the list".html_safe, root_path %></p>
