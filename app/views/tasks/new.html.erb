<h1>New Task</h1>

<div class="d-flex flex-column">
  <%= form_with model: @task do |f| %>
    <div class="d-flex flex-column align-items-start gap-2">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.label :details %>
      <%= f.text_field :details,  class: "form-control pe-5" %>
      <%= f.submit "Create Task", class: "btn btn-primary mt-3 opacity-100" %>
    </div>
  <% end %>

<p class="border-top mt-3 pt-2"><%= link_to "<i class='fa-solid fa-arrow-rotate-left'></i>Back to the list".html_safe, root_path %></p>
